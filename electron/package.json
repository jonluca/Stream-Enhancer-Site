{
  "name": "stream-enhancer",
  "version": "1.0.0",
  "description": "Extract and play m3u8 streams with credentials and authorization!",
  "author": "JonLuca DeCaro",
  "main": "src/main.js",
  "dependencies": {
    "electron-debug": "^3.0.0",
    "jquery": "^3.3.1",
    "request": "^2.88.0",
    "xhr2-unsafe": "^0.1.5"
  },
  "devDependencies": {
    "electron": "9.4.0"
  },
  "scripts": {
